            margin-left: 10px;
        }

        .tbl-header .tbl-filter.tbl-header--right {
            justify-content: flex-start;
        }
    </style>
</asp:Content>
<asp:Content ID="Content3" ContentPlaceHolderID="PageHeader" runat="server">
